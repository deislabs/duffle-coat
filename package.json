{
    "name": "duffle-coat",
    "displayName": "Duffle Coat",
    "description": "Generates CNAB self-installers",
    "version": "0.3.2",
    "preview": true,
    "publisher": "ms-kubernetes-tools",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "cnab",
        "duffle"
    ],
    "activationEvents": [
        "onCommand:dufflecoat.generate"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "dufflecoat.generate",
                "title": "Generate Self-Installer",
                "category": "Duffle"
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "dufflecoat.generate",
                    "when": "view == duffle.repoExplorer && viewItem == duffle.repoBundle",
                    "group": "4"
                },
                {
                    "command": "dufflecoat.generate",
                    "when": "view == duffle.bundleExplorer && viewItem == duffle.localBundle",
                    "group": "4"
                }
            ],
            "explorer/context": [
                {
                    "command": "dufflecoat.generate",
                    "when": "resourceFilename == bundle.json",
                    "group": "9"
                },
                {
                    "command": "dufflecoat.generate",
                    "when": "resourceFilename == bundle.cnab",
                    "group": "9"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "@types/extract-zip": "^1.6.2",
        "@types/fs-extra": "^5.0.4",
        "@types/mkdirp": "^0.5.2",
        "@types/request": "^2.47.1",
        "@types/request-promise-native": "^1.0.15",
        "@types/shelljs": "^0.8.0",
        "@types/tar": "^4.0.0",
        "@types/tmp": "0.0.33",
        "event-stream": "^4.0.1",
        "extract-zip": "^1.6.7",
        "fs-extra": "^7.0.0",
        "mkdirp": "^0.5.1",
        "node.extend": "^1.1.7",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.5",
        "shelljs": "^0.7.7",
        "tar": "^4.4.1",
        "tmp": "^0.0.33"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.30"
    },
    "extensionDependencies": [
        "ms-kubernetes-tools.duffle-vscode"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/deislabs/duffle-coat"
    }
}
