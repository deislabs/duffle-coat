{
    "name": "duffle-coat",
    "displayName": "Duffle Coat",
    "description": "Generates CNAB self-installers",
    "version": "0.0.1",
    "publisher": "ms-kubernetes-tools",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:dufflecoat.generate"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "dufflecoat.generate",
                "title": "Generate Self-Installer",
                "category": "Duffle"
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "dufflecoat.generate",
                    "when": "view == duffle.repoExplorer && viewItem == duffle.repoBundle",
                    "group": "3"
                }
            ],
            "explorer/context": [
                {
                    "command": "dufflecoat.generate",
                    "when": "resourceFilename == bundle.json",
                    "group": "9"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
